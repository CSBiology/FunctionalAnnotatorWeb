@model FaTool.Web.Models.Account.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="max-width: 460px; margin: auto;">
    <div class="panel panel-primary">
        <div class="panel-heading">@Model.Caption</div>
        <div class="panel-body">

            @using (Html.BeginForm("Edit", "Account"))
            {
                @Html.HiddenFor(x => x.Id)
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(x => x.Properties.Email)
                    @Html.TextBoxFor(x => x.Properties.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Properties.Email, null, new { @class = "error text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Properties.FirstName)
                    @Html.TextBoxFor(x => x.Properties.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Properties.FirstName, null, new { @class = "error text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Properties.LastName)
                    @Html.TextBoxFor(x => x.Properties.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Properties.LastName, null, new { @class = "error text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Properties.Company)
                    @Html.TextBoxFor(x => x.Properties.Company, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Properties.Company, null, new { @class = "error text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Properties.Address)
                    @Html.TextBoxFor(x => x.Properties.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Properties.Address, null, new { @class = "error text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Properties.City)
                    @Html.TextBoxFor(x => x.Properties.City, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Properties.City, null, new { @class = "error text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Properties.ZipCode)
                    @Html.TextBoxFor(x => x.Properties.ZipCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Properties.ZipCode, null, new { @class = "error text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Properties.State)
                    @Html.TextBoxFor(x => x.Properties.State, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Properties.State, null, new { @class = "error text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Properties.Country)
                    @Html.DropDownListFor(x => x.Properties.Country, @Model.CountryOptions, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Properties.Country, null, new { @class = "error text-danger" })
                </div>

                <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                <button type="reset" class="btn btn-primary btn-sm">Reset</button>                
            }

        </div>
    </div>
</div>


