@model FaTool.Web.Membership.Identity.FaToolLoginProperties

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="max-width: 460px; margin: auto;">  
    <div class="panel panel-primary">
        <div class="panel-heading">Login to Functional Annotator</div>
        <div class="panel-body">

            @using (Html.BeginForm("Login", "Account"))
            {
                @Html.HiddenFor(x => x.ReturnUrl)
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(x => x.UserName)
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "error text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Password)
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Password, null, new { @class = "error text-danger" })
                </div>
                <div class="checkbox">
                    <label>@Html.CheckBoxFor(x => x.RememberMe) Remember me</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            }

        </div>
    </div>
</div>