@model FaTool.Web.Models.Account.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="max-width: 460px; margin: auto;">
    <div class="panel panel-primary">
        <div class="panel-heading">@Model.Caption</div>
        <div class="panel-body">

            @using (Html.BeginForm("ChangePassword", "Account"))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.Id)

                <div class="form-group">
                    @Html.LabelFor(x => x.Properties.CurrentPassword)
                    @Html.PasswordFor(x => x.Properties.CurrentPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Properties.CurrentPassword, null, new { @class = "error text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Properties.NewPassword)
                    @Html.PasswordFor(x => x.Properties.NewPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Properties.NewPassword, null, new { @class = "error text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Properties.ConfirmPassword)
                    @Html.PasswordFor(x => x.Properties.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Properties.ConfirmPassword, null, new { @class = "error text-danger" })
                </div>

                <button class="btn btn-primary btn-sm" type="submit">Submit</button>
            }

        </div>
    </div>
</div>